#!/bin/sh
set -e

if [ "$1" != "remove" -a "$1" != "purge" ]; then
        exit 0
fi

if [ -x "/etc/init.d/istatd-agent" ]; then
        update-rc.d istatd-agent defaults
        if [ -x /usr/sbin/invoke-rc.d ]; then
                invoke-rc.d istatd-agent stop || true
        else
                /etc/init.d/istatd-agent stop || true
        fi
fi

exit 0
